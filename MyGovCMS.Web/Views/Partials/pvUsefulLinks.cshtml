@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using MyGovCMS.Core.Extensions
@{
    var currentNode = Model.Root();
    var usefullinks = currentNode.Descendants<UsefulLinks>().Where(x => x.IsVisible());
    var newsevents = currentNode.Descendants<NewsEvents>().Where(x => x.IsVisible()).OrderByDescending(y => y.Date);
}
<div class="widget notices-widget">
    <div class="widget-inner">
        <h3 class="widget-title m-has-ico"><i class="widget-ico tp tp-bullhorn"></i>Useful Links</h3>
        <div class="widget-content">
            @if(usefullinks!=null && usefullinks.Any())
            {
            <ul class="notice-list">
                @foreach (var links in usefullinks)
                {
                    <li class="notice">
                        <div class="notice-inner">
                            <h4 class="notice-title"><a href="@links.Link" target="_blank">@links.LinkTitle</a></h4>
                        </div>
                    </li>
                }
            </ul>
            }
        </div>
    </div>
</div>
