@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContactViewModel>
@using MyGovCMS.Core.ViewModels

<div class="mt-5 " id="form-outer">
    @using (Ajax.BeginForm("SubmitForm", "ContactSurface", new AjaxOptions() { UpdateTargetId = "form-result", HttpMethod = "POST", InsertionMode = InsertionMode.Replace, OnSuccess = "contactForm.showResult", OnFailure = "contactForm.showResult" }, new { id = "contact-form", @class = "row ttm-quote-form clearfix" }))
    {
        @Html.HiddenFor(m => m.ContactFormId)

            <div class="col-md-6">
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control bg-white", @placeholder = "Name..." })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control bg-white", @placeholder = "Email..." })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Mobile No (optional)</label>
                    @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control bg-white", @placeholder = "Mobile No..." })
                    @Html.ValidationMessageFor(m => m.MobileNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control bg-white", @placeholder = "Message...", rows = 6 })
                    @Html.ValidationMessageFor(m => m.Message,"",new { @class="text-danger"})
                </div>
            </div>
        <div class="col-md-12">
            <div class="text-left">
                <div class="text-center"><button type="submit" class="contact-submit ttm-btn ttm-btn-size-md ttm-btn-bgcolor-skincolor">Submit</button></div>
            </div>
        </div>


    }

</div>

